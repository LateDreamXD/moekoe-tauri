{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/api",
          "args": [
            "--platform=lite",
            "--port=6521"
          ],
          "sidecar": true
        }
      ]
    }
  ]
}